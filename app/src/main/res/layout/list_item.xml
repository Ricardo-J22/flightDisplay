<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="145dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/flight_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#716D6D"
        android:gravity="center"
        android:text="CA4331"
        android:textColor="#EF0505"
        android:textSize="90sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/green_light"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_1" />

            <Button
                android:id="@+id/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button"
                android:clickable="true"
                android:focusable="false"
                android:text="第一件行李上架"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/yellow_light"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_2" />

            <Button
                android:id="@+id/yellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button"
                android:clickable="true"
                android:focusable="false"
                android:text="最后一件行李已上架"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/red_light"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_3" />

            <Button
                android:id="@+id/red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button"
                android:clickable="true"
                android:focusable="false"
                android:letterSpacing="0"
                android:text="返回上一步/清除"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>